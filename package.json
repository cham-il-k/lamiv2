{
  "name": "land-lam-li",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "test": "jest --watchAll --verbose --coverage",
    "start": "node ./bin/www",
    "start:devc": "DEBUG=app:* nodemon ./bin/www",
    "exe": "nodemon ./bin/exe",
    "watch:sass": "node_modules/node-sass/bin/node-sass public/sass/main.scss public/css/style.css -w",
    "start:dev": "npm-run-all --parallel start watch:sass",
    "compile:sass": "node_modules/node-sass/bin/node-sass public/sass/main.scss public/css/style.comp.css",
    "concat:css": "node_modules/.bin/concat -o  public/css/style.concat.css public/css/icon-font.css public/css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 version' public/css/style.concat.css -o public/css/style.prefix.css",
    "compress:css": "node-sass public/css/style.prefix.css public/css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass  concat:css  prefix:css  compress:css",
    "dash-watch:sass": "node_modules/node-sass/bin/node-sass public/dashboard/sass/main.scss public/dashboard/css/style.css -w",
    "dash-start:dev": "npm-run-all --parallel start dash-watch:sass",
    "dash-compile:sass": "node_modules/node-sass/bin/node-sass public/dashboard/sass/main.scss public/dashboard/css/style.comp.css",
    "dash-concat:css": "node_modules/.bin/concat -o  public/dashboard/css/style.concat.css  public/dashboard/css/style.comp.css",
    "dash-prefix:css": "postcss --use autoprefixer -b 'last 10 version' public/dashboard/css/style.concat.css -o public/dashboard/css/style.prefix.css",
    "dash-compress:css": "node-sass public/dashboard/css/style.prefix.css public/dashboard/css/style.css --output-style compressed",
    "dash-build:css": "npm-run-all dash-compile:sass  dash-concat:css  dash-prefix:css  dash-compress:css"
  },
  "dependencies": {
    "bcrypt": "^3.0.1",
    "config": "^2.0.1",
    "cookie-parser": "~1.4.3",
    "express": "~4.16.0",
    "express-async-errors": "^3.0.0",
    "express-handlebars": "^3.0.0",
    "fawn": "^2.1.5",
    "hbs": "~4.0.1",
    "helmet": "^3.13.0",
    "http-errors": "~1.6.2",
    "joi": "^13.6.0",
    "joi-objectid": "^2.0.0",
    "jsonwebtoken": "^8.3.0",
    "lodash": "^4.17.11",
    "mongoose": "^5.2.17",
    "morgan": "~1.9.0",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "autoprefixer": "^8.6.5",
    "concat": "^1.0.3",
    "debug": "^2.6.9",
    "jest": "^23.6.0",
    "node-sass": "^4.10.0",
    "postcss-cli": "^6.0.1"
  }
}
